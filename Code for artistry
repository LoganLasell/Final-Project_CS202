import matplotlib.pyplot as plt

# Setting the title and subtitle of the plot
plt.suptitle('Shohei Ohtani\'s Extra-Base Hits So Far this 2024 Season')
plt.title('*As of 04/16/2024 2:00pm', fontsize=10)

# Defining the data
x = ["Doubles", "Triples", "Home Runs"]
y = (10, 1, 4)

# Creating a bar plot
plt.bar(x, y)

##One way to change bar color:
# color - ['gray', "blue', 'red']
# color - ['#ASACAF', '#005A9C', '#EF3E42'] #color hex codes also work too
# plt.bar(x, y, color=color)

# Another way to change bar color
plt.bar(x, y, color=['red', 'blue', 'silver'])

# Function to add labels to the bars
def addlabels(x, y):
    for i in range(len(x)):
        plt.text(i, y[i], y[i], ha='center')  # Adding the count as labels on top of each bar

addlabels(x, y)

# Rotating x-axis labels for better readability
plt.xticks(rotation=30)

# Displaying the plot
plt.show()


